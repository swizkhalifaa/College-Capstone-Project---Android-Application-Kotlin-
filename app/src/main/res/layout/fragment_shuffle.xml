<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:layout_editor_absoluteY="25dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPosts"
        android:layout_width="406dp"
        android:layout_height="319dp"
        android:layout_marginTop="50dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/textViewShuffleButtons"
        android:layout_width="413dp"
        android:layout_height="161dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewPosts" />

    <Button
        android:id="@+id/buttonShuffleReject"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="180dp"
        android:background="@drawable/round_red_reject"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewShuffleButtons"
        app:layout_constraintStart_toStartOf="@+id/textViewShuffleButtons"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewPosts" />

    <Button
        android:id="@+id/buttonShuffleEngage"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_greeny"
        android:fontFamily="serif"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewShuffleButtons"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewPosts" />

</androidx.constraintlayout.widget.ConstraintLayout>